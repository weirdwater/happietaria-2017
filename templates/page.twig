{% extends "base.twig" %}

{% block content %}
	<div class="page-content__wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section>
				<h1>{{post.title}}</h1>
				<div>
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}